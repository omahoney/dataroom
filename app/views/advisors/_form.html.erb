  <%= simple_form_for [@company, @advisor] do |f| %>
    <div class="pull-right"><%= f.error_notification %>
      <%= link_to new_company_person_path, :class => 'btn btn-primary btn-sm float-right' do %>
          <span class="fa fa-plus"></span>
          Person
      <% end %>
    </div>
  <div class="form-inputs">
    <%= f.input :person_id do %>
        <%= f.select :person_id, Person.where(company_id: @company.id).order('name ASC').map{ |i|[i.name, i.id] }, :selected => @advisor.person_id, :include_blank => "Choose a name"  %>
    <% end %>
    <br/>
    <%= f.input :board %>
    <%= f.input :start_date, as: :string, input_html: { class: "datepicker" } %>
    <%= f.input :term %>
    <%= f.input :compensation %>
    <%= f.input :notes %>
    <br/>
    <%= f.file_field :advisor_document %>
    <br/>
  </div>
   <br/>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                company_advisors_path, :class => 'btn' %>
  </div>
<% end %>
