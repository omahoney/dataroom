
<%= simple_form_for [@company, @valuation] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :stockplan_id do %>
      <%= f.select :stockplan_id, Stockplan.where(company_id: @company.id).map{ |c|[c.series, c.id] }, :selected => @valuation.stockplan_id, :include_blank => "Choose a stock series"  %>
    <% end %>
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.input :event %>
    <%= f.input :provider %>
    <%= f.input :valuation_date, :include_blank => true, as: :string, input_html: { class: "datepicker" }  %>
    <%= f.input :safeharbor_date, :include_blank => true, as: :string, input_html: { class: "datepicker" }  %>
    <%= f.input :active %>
    <%= f.input :notes %>
    <br/>
    <br/>
    <%= f.file_field :valuation_document %>
    <br/>
    <br/>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                company_valuations_path, :class => 'btn' %>
  </div>
<% end %>
