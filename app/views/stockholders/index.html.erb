<div class="page-header">
  <% if current_user.editor? %>
    <%= link_to new_company_stockholder_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-plus"></span>
      New Stockholder
    <% end %>
  <% end %>
  <h1>Stockholders</h1>
</div>


<div class="table-responsive">
  <table role='datatable' id="stockholdersTable" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Person</th>
      <th>Status</th>
      <th>Active</th>
      <th>Address</th>
      <th>Email</th>
      <th>Notes</th>
      <th>View</th>
    </tr>
  </thead>

  <tbody>
  <% @stockholders.each do |stockholder| %>
      <tr>

        <td><%= link_to company_person_path(@company, stockholder.person_id) do %><%= stockholder.person.name %><%end%></td>
        <td><%= stockholder.status %></td>
        <td align="center">
          <%if stockholder.active %>
            <span class="fa fa-check-circle" style="color:green" ></span>
          <% else %>
            <span class="fa fa-ban"></span>
          <% end %>
        </td>
        <td>
          <%= stockholder.person.address %><br/>
          <%= stockholder.person.city %>, <%= stockholder.person.state %><br/>
          <%= stockholder.person.zip %>
        </td>
        <td><%= stockholder.person.email %></td>
        <td><%= stockholder.notes %></td>
        <td align="center">
          <% if stockholder.stockholder_document.attached?  %>
            <%= link_to image_pack_tag("images/pdf_icon.png"), company_stockholder_path(@company, stockholder) %>
          <% else %>
            <%= link_to company_stockholder_path(@company, stockholder) do %>
              <span class="fa fa-ban"></span>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


