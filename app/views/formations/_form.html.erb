
<%= simple_form_for [@company, @formation] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :title %>
    <%= f.input :doc_date, as: :string, input_html: { class: "datepicker" } %>
    <%= f.input :description %>
    <%= f.input :status, collection: ["Pending", "Complete", "Void"] %>
    <%= f.input :notes %>
    <br>
    <%= f.file_field :formation_document %>
  </div>

  <br/>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                company_formations_path, :class => 'btn' %>
  </div>
<% end %>
