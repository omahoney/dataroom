<div class="page-header">
  <% if current_user.editor? %>
    <%= link_to new_company_formation_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-plus"></span>
      New Formation
    <% end %>
  <% end %>
  <h2>Formation Documents</h2>
</div>

<div class="table-responsive-lg">
  <table role='datatable' id="formationsTable" class="table table-striped table-bordered table-hover table-sm">
    <thead>
    <tr>
      <th>Reference</th>
      <th>Date</th>
      <th>Description</th>
      <th>Notes</th>
      <th>Status</th>
      <th>View</th>
    </tr>
    </thead>

    <tbody>
    <% @formations.each do |formation| %>
    <tr>
      <td><%= formation.title %></td>
      <td><%= formation.doc_date %></td>
      <td><%= formation.description %></td>
      <td><%= formation.notes %></td>
      <td><%= formation.status %></td>
      <% if formation.formation_document.attached?  %>
        <td align="center"><%= link_to image_pack_tag("pdf_icon.png"), company_formation_path(@company, formation) %></td>
      <% else %>
        <td align="center">
          <%= link_to company_formation_path(@company, formation) do %>
            <span class="fa fa-ban"></span>
          <% end %>
        </td>
      <% end %>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>