<div class="page-header">

<%= link_to company_formations_path, :class => 'btn btn-primary float-right' do %>
  <span class="fa fa-list-alt"></span>
  List
<% end %>
<% if current_user.editor? %>
  <%= link_to edit_company_formation_path(@company, @formation), :class => 'btn btn-primary float-right' do %>
    <span class="fa fa-edit"></span>
    Edit
  <% end %>
<% end %>
<h1>Show Formation</h1>
</div>

<div class="card">
  <div class="card-header border-success">
    Show Formation Document - <%= @formation.title %>
  </div>
  <div class="card-body">

    <ul class="list-unstyled row">
      <li class="col-sm-4 font-weight-bold">Form title:</li>
      <li class="col-sm-8"><%= @formation.title %></li>

      <li class="col-sm-4 font-weight-bold">Form date:</li>
      <li class="col-sm-8"><%= @formation.doc_date %></li>

      <li class="col-sm-4 font-weight-bold">Form description:</li>
      <li class="col-sm-8"><%= @formation.description %></li>

      <li class="col-sm-4 font-weight-bold">Form status:</li>
      <li class="col-sm-8"><%= @formation.status %></li>

      <li class="col-sm-4 font-weight-bold">Form notes:</li>
      <li class="col-sm-8"><%= @formation.notes %></li>

    </ul>

  </div>
</div>
<br/>
<br/>
<% if @formation.formation_document.attached? %>
  <object data= "<%= rails_blob_path(@formation.formation_document, disposition: "formation_document") %>"
          type="application/pdf"
          class="pdf"
          width="1000"
          height="1000">
    <p>It appears you don't have a PDF plugin for this browser.</p>
  </object>
  <br/>

  <% if @formation.formation_document.previewable? %>
    <%= link_to(image_tag(@formation.formation_document.preview(resize: "400x400>")),  rails_blob_path(@formation.formation_document, disposition: "formation_document")) %>
  <% elsif @formation.formation_document.variable? %>
    <%= link_to(image_tag(@formation.attachment.variant(resize: "400x400")), rails_blob_path(@formation.formation_document, disposition: "formation_document"))%>
  <% else %>
  <% end %>
  <%= link_to "Download file", rails_blob_path(@formation.formation_document, disposition: "formation_document") %>

<% else %>
  <div class="card w-50 mx-auto">
    <div class="card-header">
      No Document Attached
    </div>
  </div>
  </div>
<% end %>
<br/>
<br/>
