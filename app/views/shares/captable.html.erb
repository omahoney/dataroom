
<div class="page-header">
  <%= link_to dashboard_company_options_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-tachometer-alt"></span>
      Options Dashboard
  <% end %>
  <%= link_to dashboard_company_shares_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-tachometer-alt"></span>
      Shares Dashboard
  <% end %>
  <h2>Cap Table</h2>
</div>


<div class = "row text-center">
  <div class = "col-md-6" >
    <h3>Outstanding</h3>
  </div>
  <div class = "col-md-6">
    <h3>Fully Diluted</h3>
  </div>
</div>


<div class = "row text-center" >
  <div class = "col-md-6">
    <%= tag.div id: 'shareOutstanding-pie-chart', data: { shares: shares_outstanding_by_series.to_json }, style: "height: 250px;" %>
    <br/>
  </div>
  <div class = "col-md-6">
    <%= tag.div id: 'shareFullyDiluted-pie-chart', data: { shares: shares_fullydiluted.to_json }, style: "height: 250px;" %>
  </div>
</div>

<div class="row text-center">
  <div class = "col-md-12">
    <h4>Percent</h4>
    <hr/>
  </div>
</div>

<div class="row text-center">
  <div class = "col-md-6">
    <h4>Outstanding Shares: <%= number_with_delimiter(@shares_active_outstanding) %></h4>
  </div>
  <div class = "col-md-6">
    <h4>Fully Diluted Shares: <%= number_with_delimiter(shares_diluted) %></h4>
    <h5>Dilutive Shares: <%= number_with_delimiter(shares_dilutive) %></h5>
  </div>
</div>
<hr/>

<div class = "row">
  <div class = "col-md-6">
    <%= tag.div id: 'shareOutstanding-column-chart', data: { shares: shares_outstanding_by_series.to_json } %>
  </div>
  <div class = "col-md-6">
    <%= tag.div id: 'shareFullyDiluted-column-chart', data: { shares: shares_fullydiluted.to_json } %>
  </div>
</div>
<div class="row text-center">
  <div class = "col-md-12">
    <h4>Shares</h4>
    <hr/>
  </div>
</div>




