<div class="page-header">
  <% if current_user.editor? %>
  <%= link_to new_company_person_path, :class => 'btn btn-primary float-right' do %>
    <span class="fa fa-plus"></span>
    New Person
  <% end %>
  <% end %>
  <h1>People</h1>
</div>


<div class="table-responsive-lg">
  <table role='datatable' id="peopleTable" class="table table-striped table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Company name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Country</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Person type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @people.each do |person| %>
<tr>
        <td><%= person.name %></td>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.title %></td>
        <td><%= person.company_name %></td>
        <td><%= person.address %></td>
        <td><%= person.city %></td>
        <td><%= person.state %></td>
        <td><%= person.zip %></td>
        <td><%= person.country %></td>
        <td><%= person.email %></td>
        <td><%= person.phone %></td>
        <td><%= person.person_type %></td>
        <td>
          <%= link_to company_person_path(@company, person) do %>
            <span class="fa fa-search"></span>
          <% end %>
        </td>
</tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

