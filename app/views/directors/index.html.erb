<div class="page-header">
  <% if current_user.editor? %>
    <%= link_to new_company_director_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-plus"></span>
      New Director
    <% end %>
  <% end %>
  <h1>Directors</h1>
</div>

<div class="table-responsive-lg">
  <table role='datatable' id="directorsTable" class="table table-striped table-bordered table-hover table-sm">
    <thead>
    <tr>
      <th>Name</th>
      <th>Election</th>
      <th>Class</th>
      <th>Term</th>
      <th>Start date</th>
      <th>Term date</th>
      <th>View</th>
    </tr>
    </thead>

    <tbody>
    <% @directors.each do |director| %>
    <tr>
      <td>
        <%= link_to company_person_path(@company, director.person_id) do %><%= director.person.name %><%end%>
      </td>
      <td align="center">
        <%= link_to company_resolution_path(@company, director.resolution_id) do %><%= director.resolution.title %><%end%>
      </td>
      <td align="center"><%= director.director_class %></td>
      <td align="center"><%= director.term %></td>
      <td><%= director.start_date %></td>
      <td><%= director.start_date + director.term.year %></td>

      <td align="center">
        <% if director.director_document.attached?  %>
          <%= link_to image_pack_tag("pdf_icon.png"), company_director_path(@company, director) %>
        <% else %>
          <%= link_to company_director_path(@company, director) do %>
            <span class="fa fa-ban"></span>
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>