<div class="page-header">
  <% if current_user.editor? %>
  <%= link_to new_company_officer_path, :class => 'btn btn-primary float-right' do %>
    <span class="fa fa-plus"></span>
    New Officer
  <% end %>
    <% end %>
  <h2>Officers</h2>
</div>

<div class="table-responsive-lg">
  <table role='datatable' id="officersTable" class="table table-striped table-bordered table-hover table-sm">
    <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Appointment</th>
      <th>Required</th>
      <th>Notes</th>
      <th>View</th>
    </tr>
    </thead>

    <tbody>
    <% @officers.each do |officer| %>
    <tr>
      <td><%= link_to company_person_path(@company, officer.person_id) do %><%= officer.person.name %><%end%></td>
      <td><%= officer.title %></td>
      <td align="center">
        <%= link_to company_resolution_path(@company, officer.resolution_id) do %><%= officer.resolution.title %><%end%>
      </td>
      <% if officer.jx_required == true  %>
        <td align="center"><span class="fa fa-check"></span></td>
      <% else %>
        <td align="center">
          <span class="fa fa-ban"></span>
        </td>
      <% end %>

      <td><%= officer.notes %></td>
      <td align="center">
        <% if officer.officer_document.attached?  %>
          <%= link_to image_pack_tag("pdf_icon.png"), company_officer_path(@company, officer) %>
        <% else %>
          <%= link_to company_officer_path(@company, officer) do %>
            <span class="fa fa-ban"></span>
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>

