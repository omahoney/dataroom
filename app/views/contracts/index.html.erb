<div class="page-header">
  <% if current_user.editor? %>
    <%= link_to new_company_contract_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-plus"></span>
      New Contract
    <% end %>
  <% end %>
  <h1>Contracts</h1>
</div>

<div class="table-responsive">
  <table role='datatable' id="contractsTable" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>

      <th>Contractor</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Country</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Term</th>
      <th>Terms</th>
      <th>Notes</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
  <tr>
      <td><%= contract.contractor %></td>
      <td><%= contract.address %></td>
      <td><%= contract.city %></td>
      <td><%= contract.state %></td>
      <td><%= contract.zip %></td>
      <td><%= contract.country %></td>
      <td><%= contract.start_date %></td>
      <td><%= contract.end_date %></td>
      <td><%= contract.term %></td>
      <td><%= contract.terms %></td>
      <td><%= contract.notes %></td>
      <td align="center">
        <% if contract.contract_document.attached?  %>
          <%= link_to image_pack_tag("pdf_icon.png"), company_contract_path(@company, contract) %>
        <% else %>
            <%= link_to company_contract_path(@company, contract) do %>
              <span class="fa fa-ban"></span>
            <% end %>
        <% end %>
      </td>
  </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

