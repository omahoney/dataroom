<%= simple_form_for [@company, @contract] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :contractor %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state, collection: us_states %>
    <%= f.input :zip %>
    <%= f.input :country %>
    <%= f.input :start_date, as: :string, input_html: { class: "datepicker" } %>
    <%= f.input :end_date, as: :string, input_html: { class: "datepicker" } %>
    <%= f.input :term %>
    <%= f.input :terms %>
    <%= f.input :notes %>
    <br/>
    <%= f.file_field :contract_document %>
    <br/>    <br/>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                company_contracts_path, :class => 'btn' %>
  </div>
<% end %>
