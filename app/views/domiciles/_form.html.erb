
<%= simple_form_for [@company, @domicile] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :domicile_locus %>
    <%= f.input :domicile_type, collection: [ "Country", "State", "Local"] %>
    <%= f.input :domicile_number %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :county %>
    <%= f.input :state, collection: us_states %>
    <%= f.input :zip %>
    <%= f.input :country, priority: ["US"] %>
    <%= f.input :agent %>
    <%= f.input :notes %>
    <br/>
    <%= f.file_field :domicile_document %>
    <br/>
  </div>

  <br/><br/>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                company_directors_path, :class => 'btn' %>
  </div>
<% end %>
