
<%= simple_form_for [@company, @form] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :ref %>
    <%= f.input :category, collection: ["Legal", "Finance", "Corporate"] %>
    <%= f.input :description %>
    <%= f.input :version %>
    <%= f.input :doc_date, as: :string, input_html: { class: "datepicker" }  %>
    <%= f.input :notes %>
    <br/>
    <%= f.file_field :form_document %>
    <br/>
    <br/>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                company_forms_path, :class => 'btn' %>
  </div>
<% end %>
