<div class="page-header">
  <%= link_to company_ndas_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-list-alt"></span>
      List
  <% end %>
  <% if current_user.editor? %>
  <%= link_to edit_company_nda_path(@company, @nda), :class => 'btn btn-primary float-right' do %>
    <span class="fa fa-edit"></span>
    Edit
  <% end %><% end %>

  <h1>Show NDA<%= @nda.title %></h1>
</div>

<div class="card-group card border-success mb-3">
  <div class="card">
    <div class="card-header border-success">Title - <%= @nda.title %></div>
    <div class="card-body">

      <ul class="list-unstyled row">

  <li class="col-sm-4 font-weight-bold">Last name:</li>
  <li class="col-sm-8"><%= @nda.last_name %></li>

  <li class="col-sm-4 font-weight-bold">First name:</li>
  <li class="col-sm-8"><%= @nda.first_name %></li>

  <li class="col-sm-4 font-weight-bold">Company name:</li>
  <li class="col-sm-8"><%= @nda.company_name %></li>

  <li class="col-sm-4 font-weight-bold">Domicile:</li>
  <li class="col-sm-8"><%= @nda.country %></li>

  <li class="col-sm-4 font-weight-bold">Capacity:</li>
  <li class="col-sm-8"><%= @nda.capacity %></li>

      </ul>

    </div>
  </div>

  <div class="card">
    <div class="card-header border-success">Data</div>
    <div class="card-body">
      <ul class="list-unstyled row">
        <li class="col-sm-4 font-weight-bold">Doc date:</li>
        <li class="col-sm-8"><%= @nda.nda_date %></li>

        <li class="col-sm-4 font-weight-bold">Type:</li>
        <li class="col-sm-8"><%= @nda.nda_type %></li>

        <li class="col-sm-4 font-weight-bold">Term:</li>
        <li class="col-sm-8"><%= @nda.term %></li>

        <li class="col-sm-4 font-weight-bold">Status:</li>
        <li class="col-sm-8"><%= @nda.status %></li>

        <li class="col-sm-4 font-weight-bold">Notes:</li>
        <li class="col-sm-8"><%= @nda.notes %></li>
      </ul>
    </div>
  </div>
</div>

<br/>
<br/>
<% if @nda.nda_document.attached? %>
<object data= "<%= rails_blob_path(@nda.nda_document, disposition: "nda_document") %>"
        type="application/pdf"
        class="pdf"
        width="1000"
        height="1000">
  <p>It appears you don't have a PDF plugin for this browser.</p>
</object>
<br/>

<% if @nda.nda_document.previewable? %>
  <%= link_to(image_tag( @nda.nda_document.preview(resize: "400x400>")),  rails_blob_path( @nda.nda_document, disposition: "nda_document")) %>
<% elsif @nda.nda_document.variable? %>
  <%= link_to(image_tag( @nda.nda_document.variant(resize: "400x400")), rails_blob_path( @nda.nda_document, disposition: "nda_document"))%>
<% else %>
<% end %>
<%= link_to "Download file", rails_blob_path(@nda.nda_document, disposition: "nda_document") %>

<% else %>
<div class="card w-50 mx-auto">
  <div class="card-header">
    No Document Attached
  </div>
</div>
</div>
<% end %>
<br/>
<br/>
<br/>
<br/>

