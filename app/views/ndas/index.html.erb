<div class="page-header">
  <% if current_user.editor? %>
    <%= link_to new_company_nda_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-plus"></span>
      New NDA
    <% end %>
  <% end %>
  <h1>Non-disclosure Agreements</h1>
  <div style="float:right">
    <%= form_tag({:controller => "ndas", :action => "index"}, :method => "get")  do %>
        <%= select_tag "filter", options_for_select([ "All", "Personal", "Corporate", "One-Way", "Mutual", "Multi-Party", "Reverse", "Investor", "Collaborator", "Contractor", "Employee", "Advisor", "Director", "Vendor", "Joint Venture" ], params[:filter]), {:onchange => 'this.form.submit()'}  %>
    <% end %>
  </div>
</div>

<div class="table-responsive-lg">
  <table role='datatable' id="ndasTable" class="table table-striped table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th>Title</th>
      <th>Nda date</th>
      <th>Last name</th>
      <th>First name</th>
      <th>Company name</th>
      <th>Capacity</th>
      <th>Nda type</th>
      <th>Term</th>
      <th>Status</th>
      <th>Country</th>
      <th>Notes</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @ndas.each do |nda| %>
  <tr>
        <td><%= nda.title %></td>
        <td><%= nda.nda_date %></td>
        <td><%= nda.last_name %></td>
        <td><%= nda.first_name %></td>
        <td><%= nda.company_name %></td>
        <td><%= nda.capacity %></td>
        <td><%= nda.nda_type %></td>
        <td><%= nda.term %></td>
        <td><%= nda.status %></td>
        <td><%= nda.country %></td>
        <td><%= nda.notes %></td>
        <td align="center">
          <% if nda.nda_document.attached?  %>
            <%= link_to image_pack_tag("pdf_icon.png"), company_nda_path(@company, nda) %>
          <% else %>
            <%= link_to company_nda_path(@company, nda) do %>
              <span class="fa fa-ban"></span>
            <% end %>
          <% end %>
        </td>
  </tr>
    <% end %>
  </tbody>
</table>
</div>