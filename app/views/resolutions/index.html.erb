<div class="page-header">
  <% if current_user.editor? %>
    <%= link_to new_company_resolution_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-plus"></span>
      New Resolution
    <% end %>
  <% end %>
  <h2>List Resolutions</h2>
</div>

<div class="table-responsive-lg">
  <table role='datatable' id="resolutionsTable" class="table table-striped table-bordered table-hover table-sm">
    <thead>
    <tr>
      <th>Title</th>
      <th>Res date</th>
      <th>Description</th>
      <th>Party</th>
      <th>Type</th>
      <th>Notes</th>
      <th>Status</th>
      <th>View</th>
    </tr>
    </thead>

    <tbody>
    <% @resolutions.each do |resolution| %>
    <tr>
      <td><%= resolution.title %></td>
      <td><%= resolution.doc_date %></td>
      <td><%= resolution.description %></td>
      <td><%= resolution.party %></td>
      <td><%= resolution.res_type %></td>
      <td><%= resolution.notes %></td>
      <td><%= resolution.status %></td>
      <% if resolution.resolution_document.attached?  %>
        <td align="center"><%= link_to image_pack_tag("pdf_icon.png"), company_resolution_path(@company, resolution) %></td>
      <% else %>
        <td align="center">
          <%= link_to company_resolution_path(@company, resolution) do %>
            <span class="fa fa-ban"></span>
          <% end %>
        </td>
      <% end %>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div class="page-header">
  <% if current_user.editor? %>
    <%= link_to new_company_resolution_path, :class => 'btn btn-primary float-right' do %>
      <span class="fa fa-plus"></span>
      New Resolution
    <% end %>
  <% end %>
</div>
